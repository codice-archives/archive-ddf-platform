<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
        ">
    <!-- DDF-579: converted persistence of notifications to use Cassandra vs. Hazelcast 
    <bean id="notificationStore" class="org.codice.ddf.notifications.impl.HazelcastNotificationStore">
        <argument ref="blueprintBundleContext" />
        <argument value="notifications-hazelcast.xml" />
    </bean>
    
    <service ref="notificationStore" interface="org.codice.ddf.notifications.store.NotificationStore" >
    </service>
    
    <bean id="notificationListener" class="org.codice.ddf.notifications.impl.HazelcastNotificationListener">
        <argument ref="notificationStore" />
    </bean>
    
    END DDF-579 -->
    
    <reference id="persistentStore" interface="org.codice.ddf.persistence.PersistentStore" />
    
    <bean id="notificationListener" class="org.codice.ddf.persistence.events.NotificationListener">
        <argument ref="persistentStore" />
    </bean>
    
    <service ref="notificationListener" interface="org.osgi.service.event.EventHandler" >
        <service-properties>
            <entry key="event.topics" >
                <array value-type="java.lang.String">
                    <value>ddf/notifications/broadcast</value>
                    <value>ddf/notifications/catalog/downloads</value>
                </array>
            </entry>
        </service-properties>
    </service>

    <bean id="activityListener" class="org.codice.ddf.persistence.events.ActivityListener">
        <argument ref="persistentStore" />
    </bean>

    <service ref="activityListener" interface="org.osgi.service.event.EventHandler" >
        <service-properties>
            <entry key="event.topics" >
                <array value-type="java.lang.String">
                    <value>ddf/activities</value>
                    <value>ddf/activities/broadcast</value>
                </array>
            </entry>
        </service-properties>
    </service>

</blueprint>