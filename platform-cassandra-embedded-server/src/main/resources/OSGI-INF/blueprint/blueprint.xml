<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <bean id="cassandraConfig" class="org.codice.ddf.platform.cassandra.embedded.CassandraConfig">
        <argument value="DDF Cluster" />
        <argument value="conf/cassandra.yaml" />
        <argument value="9160" />
        <argument value="9042" />
        <argument value="7000" />
        <argument value="7001" />
        <argument value="/data" />
        <argument value="/commitlog" />
        <argument value="/saved_caches" />
    </bean>
    
    <bean id="casssandraServer" class="org.codice.ddf.platform.cassandra.embedded.CassandraEmbeddedServer"
        destroy-method="shutdown">
        <argument value="ddf" />
        <argument ref="cassandraConfig" />
    </bean>
    
    <service id="CasssandraServerService" ref="casssandraServer" interface="org.codice.ddf.persistentstorage.PersistentStore" />
    
</blueprint>
    